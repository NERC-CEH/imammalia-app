{
  "name": "imammalia-app",
  "id": "uk.ac.ceh.imammalia",
  "title": "iMammalia App",
  "description": "iMammalia mobile application.",
  "version": "1.6.0",
  "homepage": "https://european-mammals.brc.ac.uk",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "deploy": "cp other/demo.html build/ && URL=$(vercel --prod -t $VERCEL_TOKEN --yes -A ./other/vercel.json ./build) && CLEAN_URL=$(echo $URL | sed -r \"s/https:\\/\\/(.*)$/\\1/g\") && DEMO_URL=$(echo $CLEAN_URL | sed -r \"s/(.*\\-)[a-z0-9]+\\-flumens(\\.vercel\\.app)$/\\1${BITRISE_BUILD_NUMBER}\\2/g\") && envman add --key DEMO_URL --value \"https://$DEMO_URL\"",
    "deploy:production": "bitrise run ci",
    "check": "npx tsc --noEmit --skipLibCheck && npm run test:eslint",
    "clean": "rm -rf build resources",
    "test": "jest --silent --passWithNoTests",
    "test:watch": "jest --watchAll",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .ts --ext .tsx --ext .js && echo '\\033[37;42;1m PASS \\033[00m'",
    "fetch:data": "cd src/common/data && node make.js"
  },
  "dependencies": {
    "@capacitor-community/sqlite": "^7.0.2",
    "@capacitor/android": "7.4.4",
    "@capacitor/app": "7.1.0",
    "@capacitor/camera": "7.0.2",
    "@capacitor/core": "7.4.4",
    "@capacitor/device": "7.0.2",
    "@capacitor/filesystem": "7.1.4",
    "@capacitor/geolocation": "7.1.5",
    "@capacitor/haptics": "7.0.2",
    "@capacitor/ios": "7.4.4",
    "@capacitor/network": "7.0.2",
    "@capacitor/share": "^7.0.2",
    "@capacitor/splash-screen": "7.0.3",
    "@capacitor/status-bar": "7.0.3",
    "@flumens/ionic": "2.0.0-alpha.83",
    "@flumens/models": "0.16.1",
    "@flumens/tailwind": "0.37.1",
    "@flumens/utils": "^0.6.0",
    "@hookform/resolvers": "^4.0.0",
    "@ionic-native/core": "5.36.0",
    "@ionic-native/sqlite": "5.36.0",
    "@ionic/core": "^8.7.13",
    "@ionic/react": "^8.7.13",
    "@ionic/react-router": "^8.7.13",
    "@sentry/browser": "9.10.1",
    "axios": "^1.13.2",
    "capacitor-blob-writer": "^1.1.19",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "i18next": "^25.7.3",
    "ionicons": "^8",
    "jeep-sqlite": "^2.8.0",
    "jwt-decode": "^4.0.0",
    "leaflet": "^1.9.4",
    "lodash": "4.17.21",
    "mobx": "^6.15.0",
    "mobx-react": "^9.2.1",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-hook-form": "^7.68.0",
    "react-i18next": "^16.5.0",
    "react-leaflet": "5.0.0",
    "react-router": "5.3.4",
    "react-router-dom": "5.3.4",
    "react-svg": "^16.3.0",
    "sql.js": "1.12.0",
    "swiper": "^12.0.3",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "^7.28.5",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@capacitor/cli": "^7.4.4",
    "@flumens/bigu": "^0.4.1",
    "@flumens/eslint-config": "^2.1.2",
    "@flumens/fetch-onedrive-excel": "^0.3.4",
    "@flumens/prettier-config": "0.4.0",
    "@flumens/webpack-config": "^6.0.3",
    "@types/jest": "^29.5.14",
    "@types/leaflet": "^1.9.21",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@types/react-router": "^5.1.20",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-table": "^7.7.20",
    "babel-eslint": "10.1.0",
    "babel-jest": "^30.2.0",
    "babel-plugin-module-resolver": "5.0.2",
    "copy-webpack-plugin": "^13.0.1",
    "cordova-res": "^0.15.4",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-transform-stub": "2.0.0",
    "mobx-utils": "^6.1.1",
    "mock-geolocation": "1.0.11",
    "tailwindcss": "^4.1.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vercel": "^50.1.0",
    "webpack": "^5.104.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "xml2js": "0.6.2"
  },
  "browserslist": [
    "ChromeAndroid >=89",
    "iOS >=12"
  ],
  "engines": {
    "node": ">=20",
    "npm": ">=10"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NERC-CEH/imammalia-app"
  },
  "bugs": {
    "url": "https://github.com/NERC-CEH/imammalia-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "imammalia",
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh"
  ],
  "babel": {
    "presets": [
      [
        "@babel/react",
        {
          "runtime": "automatic"
        }
      ],
      [
        "@babel/env",
        {
          "loose": true,
          "modules": "commonjs",
          "corejs": "3.22",
          "useBuiltIns": "usage"
        }
      ],
      [
        "@babel/typescript",
        {
          "allowDeclareFields": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/transform-runtime",
        {
          "regenerator": true
        }
      ],
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@flumens$": "./src/common/flumens",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "Components": "./src/common/Components"
          }
        }
      ],
      "@babel/transform-exponentiation-operator",
      "@babel/syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@flumens",
      "plugin:react/jsx-runtime"
    ],
    "rules": {
      "react/function-component-definition": 0,
      "react/prop-types": 0,
      "react/jsx-no-bind": 0,
      "@typescript-eslint/no-var-requires": 0,
      "@getify/proper-arrows/name": 0
    }
  },
  "prettier": "@flumens/prettier-config",
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "babel-jest",
        {
          "presets": [
            "@babel/env"
          ]
        }
      ]
    },
    "testRegex": "((src/\\.|/*.)(spec))\\.(t|j)s?$",
    "moduleNameMapper": {
      "^.+.(css|style|less|sass|scss|svg|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "ionicons": "jest-transform-stub",
      "ionic-native": "jest-transform-stub",
      "swiper": "jest-transform-stub"
    },
    "moduleDirectories": [
      "node_modules",
      "components",
      "src"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setupTests.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ionic|@stencil|ionicons)"
    ]
  }
}
