{
  "name": "imammalia-app",
  "id": "uk.ac.ceh.imammalia",
  "title": "iMammalia App",
  "description": "iMammalia mobile application.",
  "version": "1.4.0",
  "homepage": "https://european-mammals.brc.ac.uk",
  "scripts": {
    "start": "webpack serve --progress --port 8000",
    "build": "NODE_ENV=production webpack",
    "build:production": "npm run clean && npm run build && npx cap sync && npm run build:resources",
    "build:resources": "mkdir -p resources && cp -R other/designs/android resources && cp -R other/designs/*.png resources && npx cordova-res ios --skip-config --resources resources --copy && npx cordova-res android --skip-config --resources resources --copy",
    "deploy": "vercel --prod -A other/now.json -t $VERCEL_TOKEN --confirm",
    "deploy:production": "echo 'NOTHING HERE :('",
    "test": "karma start test/karma.conf.js",
    "clean": "rm -rf build && rm -rf resources && rm -rf cordova",
    "test:watch": "karma start test/karma.conf.js --no-single-run",
    "test:sauce": "karma start test/karma.conf-sauce.js",
    "test:eslint": "eslint src --quiet --ext .jsx --ext .js && echo '\\033[37;42;1m PASS \\033[00m'",
    "fetch:data": "cd src/common/data && node make.js"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test:eslint && npm run test"
    }
  },
  "dependencies": {
    "@capacitor/android": "^3.4.3",
    "@capacitor/app": "^1.1.1",
    "@capacitor/core": "^3.4.3",
    "@capacitor/ios": "^3.4.3",
    "@capacitor/network": "^1.0.7",
    "@capacitor/splash-screen": "^1.2.2",
    "@capacitor/status-bar": "^1.0.8",
    "@ionic-native/core": "5.36.0",
    "@ionic-native/sqlite": "5.36.0",
    "@ionic/core": "^6.1.4",
    "@ionic/react": "^6.1.4",
    "@ionic/react-router": "^6.1.4",
    "backbone": "1.4.0",
    "backbone.localstorage": "2.0.2",
    "cordova": "10.0.0",
    "core-js": "3.2.1",
    "formik": "^1.5.4",
    "indicia": "4.4.2",
    "ionicons": "^6",
    "leaflet": "1.5.1",
    "localforage": "1.7.3",
    "localforage-cordovasqlitedriver": "1.8.0",
    "lodash": "4.17.15",
    "mobx": "5.13.1",
    "mobx-react": "6.1.3",
    "mobx-react-devtools": "6.1.1",
    "photoswipe": "4.1.3",
    "prop-types": "15.7.2",
    "react-leaflet": "2.3.0",
    "react-leaflet-control": "2.1.1",
    "react-photoswipe": "^1.3.0",
    "react-router-dom": "5.3.0",
    "react-svg": "10.0.22",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router": "5.2.1",
    "toposort": "^2.0.2",
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@babel/core": "7.13.10",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-decorators": "7.13.5",
    "@babel/plugin-syntax-dynamic-import": "7.8.3",
    "@babel/plugin-transform-exponentiation-operator": "7.12.13",
    "@babel/preset-env": "7.13.10",
    "@babel/preset-react": "7.12.13",
    "@flumens/eslint-config": "^2.0.1",
    "@flumens/webpack-config": "^4.1.2",
    "@flumens/fetch-onedrive-excel": "^0.1.0",
    "autoprefixer": "9.6.1",
    "babel-eslint": "10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-module-resolver": "4.1.0",
    "chai": "4.2.0",
    "chromedriver": "77.0.0",
    "cordova-res": "^0.15.3",
    "csvtojson": "2.0.10",
    "dotenv": "8.1.0",
    "eslint": "7.21.0",
    "eslint-import-resolver-babel-module": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "express": "4.17.1",
    "express-history-api-fallback": "2.2.1",
    "husky": "3.0.7",
    "jest": "^26.6.3",
    "karma": "4.3.0",
    "karma-chai": "0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "2.0.1",
    "karma-mocha": "1.3.0",
    "karma-mocha-reporter": "2.2.5",
    "karma-sauce-launcher": "2.0.2",
    "karma-sinon": "1.0.5",
    "karma-webpack": "^5.0.0",
    "mini-css-extract-plugin": "0.8.0",
    "mocha": "6.2.1",
    "mock-geolocation": "1.0.11",
    "po2json": "^1.0.0-beta-3",
    "prettier": "^2.0.2",
    "prettier-eslint": "12.0.0",
    "prettier-eslint-cli": "5.0.1",
    "puppeteer": "^8.0.0",
    "react-svg-loader": "^3.0.3",
    "sinon": "7.5.0",
    "vercel": "21.2.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "xml2js": "0.4.22"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "author": {
    "name": "Flumens",
    "email": "enquiries@flumens.io",
    "url": "https://flumens.io"
  },
  "babel": {
    "presets": [
      "@babel/preset-react",
      [
        "@babel/env",
        {
          "targets": {
            "android": "5.1",
            "ios": "10.2"
          },
          "modules": "commonjs",
          "corejs": "3.0.0",
          "useBuiltIns": "usage"
        }
      ]
    ],
    "plugins": [
      [
        "module-resolver",
        {
          "root": [
            "./src"
          ],
          "alias": {
            "@apps": "./src/common/appsBitCollection",
            "common": "./src/common",
            "helpers": "./src/common/helpers",
            "models": "./src/common/models",
            "app_model": "./src/common/models/app_model",
            "user_model": "./src/common/models/user_model",
            "sample": "./src/common/models/sample",
            "occurrence": "./src/common/models/occurrence",
            "saved_samples": "./src/common/saved_samples",
            "config": "./src/common/config/config",
            "Components": "./src/common/Components"
          }
        }
      ],
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "@babel/plugin-transform-exponentiation-operator",
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ],
      "@babel/plugin-syntax-dynamic-import"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "parser": "babel-eslint",
    "extends": "@flumens",
    "settings": {
      "import/resolver": {
        "babel-module": {}
      }
    },
    "rules": {
      "jsx-a11y/accessible-emoji": 0,
      "@getify/proper-arrows/name": 0,
      "react/jsx-filename-extension": 0,
      "jest/no-done-callback": 0,
      "jest/expect-expect": 0,
      "jest/valid-expect": 0
    },
    "globals": {
      "t": true,
      "cordova": true,
      "before": true,
      "after": true,
      "sinon": true
    }
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "trailingComma": "es5",
    "arrowParens": "avoid"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NERC-CEH/imammalia-app"
  },
  "bugs": {
    "url": "https://github.com/NERC-CEH/imammalia-app/issues"
  },
  "licenses": [
    {
      "type": "GNU GPL v3",
      "url": "http://www.gnu.org/licenses/gpl.html"
    }
  ],
  "keywords": [
    "imammalia",
    "biological",
    "recording",
    "mobile",
    "app",
    "offline",
    "ceh"
  ]
}
